<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cor da borda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Cor da borda: vermelho -->
        </shape>
    </item>

    <!-- Cor de fundo interna -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor interna: branco -->
        </shape>
    </item>
</layer-list>
