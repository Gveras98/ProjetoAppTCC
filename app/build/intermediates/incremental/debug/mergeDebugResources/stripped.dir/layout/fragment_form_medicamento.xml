<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.projetovital.agenda.AgendaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/medicamentos"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Nome Medicamento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputEtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med.nome"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dose Medicamento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputEtDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedDose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/med.dose"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duração Medicamento -->
        <!-- Verificar a possibilidade: Ao Inves de Intervalo - Data Inicio / Data Fim -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/med.duracao"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSpinnerEtDuracaoMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerEtDuracaoMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Intervalo Medicamento -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/med.intervalo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSpinnerEtIntercaloMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerEtIntercaloMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnMedSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/med.salvar"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>